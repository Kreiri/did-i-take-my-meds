<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="vm"
            type="dev.corruptedark.diditakemymeds.activities.meddetails.MedDetailViewModel" />

        <import type="android.view.View"/>
    </data>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?ditmm_colorBackground"
        tools:context=".activities.meddetails.MedDetailActivity"
        android:orientation="vertical">

        <include
            android:id="@+id/appbar"
            layout="@layout/view_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <androidx.core.widget.NestedScrollView
            android:id="@+id/outer_scroll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="vertical"
            android:fadeScrollbars="false">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/name_label"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="?colorAccentSecondary"
                    app:autoSizeTextType="uniform"
                    android:textSize="@dimen/large_text_size"
                    android:paddingTop="15dp"
                    android:paddingHorizontal="20dp"
                    android:paddingBottom="5dp"
                    android:text="@{vm.medication.name}"
                    tools:text="@string/sample_medicine" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/time_label"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="?colorAccent"
                    app:autoSizeTextType="uniform"
                    android:textSize="@dimen/medium_text_size"
                    android:paddingVertical="5dp"
                    android:paddingHorizontal="20dp"
                    tools:text="@string/midnight"
                    app:nextDose="@{vm.medication}"
                    tools:visibility="visible"
                    android:visibility="@{vm.showTimeLabel ? View.VISIBLE : View.GONE}"
                    />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/closest_dose_label"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="?colorAccent"
                    app:autoSizeTextType="uniform"
                    android:textSize="@dimen/medium_text_size"
                    android:paddingVertical="5dp"
                    android:paddingHorizontal="20dp"
                    tools:text="@string/closest_dose_sample"
                    app:closestDose="@{vm.medication}"
                    tools:visibility="visible"
                    android:visibility="@{vm.showClosestDose ? View.VISIBLE : View.GONE}" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/time_since_dose_label"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="?colorAccent"
                    app:autoSizeTextType="uniform"
                    android:textSize="@dimen/medium_text_size"
                    android:paddingVertical="10dp"
                    android:paddingHorizontal="20dp"
                    android:gravity="center_horizontal"
                    app:sinceLastDose="@{vm.medication}"
                    android:visibility="@{vm.showSinceLastDose ? View.VISIBLE : View.GONE}"
                    tools:visibility="visible"
                    tools:text="@string/time_since_dose_sample" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/just_took_it_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="8dp"
                    android:layout_marginHorizontal="20dp"
                    android:padding="15dp"
                    android:textSize="@dimen/medium_text_size"
                    tools:text="@string/i_just_took_it"
                    app:justTookIt="@{vm.medication}"
                    android:onClick="@{() -> vm.onJustTookItPressed()}"
                    style="@style/Widget.Button.Accented.Outlined" />

                <com.google.android.material.switchmaterial.SwitchMaterial
                    android:id="@+id/active_switch"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/medication_active"
                    android:textColor="?colorAccent"
                    android:textSize="@dimen/medium_text_size"
                    android:paddingVertical="5dp"
                    android:paddingHorizontal="20dp"
                    android:checked="@{vm.medication.active}"
                    android:onCheckedChanged="@{(switch, checked) -> vm.onActiveCheckedChanged(switch, checked)}"
                    tools:checked="true" />

                <com.google.android.material.switchmaterial.SwitchMaterial
                    android:id="@+id/notification_switch"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/notifications_enabled"
                    android:textColor="?colorAccent"
                    android:textSize="@dimen/medium_text_size"
                    android:paddingVertical="5dp"
                    android:paddingHorizontal="20dp"
                    tools:checked="true"
                    android:checked="@{vm.medication.notify}"
                    android:onCheckedChanged="@{(switch, value) -> vm.onNotifyCheckedChanged(switch, value)}"
                    tools:visibility="visible"
                    android:visibility="@{vm.showNotificationSwitch ? View.VISIBLE : View.GONE}"/>

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/rx_number_label"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:autoSizeTextType="uniform"
                    android:textSize="@dimen/small_text_size"
                    android:paddingTop="5dp"
                    android:paddingHorizontal="20dp"
                    android:paddingBottom="5dp"
                    app:rxNumber="@{vm.medication}"
                    tools:text="@string/sample_rx_number_label" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/type_label"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:autoSizeTextType="uniform"
                    android:textSize="@dimen/small_text_size"
                    android:paddingVertical="5dp"
                    android:paddingHorizontal="20dp"
                    app:medicationType="@{vm.medicationType}"
                    tools:text="@string/sample_type_label" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/take_with_food_label"
                    android:visibility="@{vm.medication.takeWithFood ? View.VISIBLE : View.GONE}"
                    tools:visibility="visible"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:autoSizeTextType="uniform"
                    android:textSize="@dimen/small_text_size"
                    android:paddingVertical="5dp"
                    android:paddingHorizontal="20dp"
                    android:text="@string/take_with_food" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/dose_amount_label"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:autoSizeTextType="uniform"
                    android:textSize="@dimen/small_text_size"
                    android:paddingVertical="5dp"
                    android:paddingHorizontal="20dp"
                    app:doseUnit="@{vm.doseUnit}"
                    app:amountPerDose="@{vm.medication.amountPerDose}"
                    android:visibility="@{vm.showDoseInfo ? View.VISIBLE : View.GONE}"
                    tools:visibility="visible"
                    tools:text="@string/sample_dose_amount_label" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/remaining_doses_label"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:autoSizeTextType="uniform"
                    android:textSize="@dimen/small_text_size"
                    android:paddingVertical="5dp"
                    android:paddingHorizontal="20dp"
                    app:remainingDoses="@{vm.medication.remainingDoses}"
                    android:visibility="@{vm.showRemainingDoses ? View.VISIBLE : View.GONE}"
                    tools:visibility="visible"
                    tools:text="@string/sample_remaining_doses_label" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/pharmacy_label"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:autoSizeTextType="uniform"
                    android:textSize="@dimen/small_text_size"
                    android:paddingVertical="5dp"
                    android:paddingHorizontal="20dp"
                    app:pharmacy="@{vm.medication}"
                    tools:text="@string/sample_pharmacy_label" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/detail_label"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:autoSizeTextType="uniform"
                    android:textSize="@dimen/small_text_size"
                    android:paddingVertical="5dp"
                    android:paddingHorizontal="20dp"
                    android:text="@{vm.medication.description}"
                    android:visibility="@{vm.showDescription ? View.VISIBLE : View.GONE}"
                    tools:visibility="visible"
                    tools:text="@string/sample_description" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/previous_doses_label"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="?colorAccent"
                    app:autoSizeTextType="uniform"
                    android:textSize="@dimen/medium_text_size"
                    android:paddingTop="20dp"
                    android:paddingHorizontal="20dp"
                    android:text="@string/previous_doses" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/delete_hint_label"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="?colorAccent"
                    app:autoSizeTextType="uniform"
                    android:textSize="@dimen/medium_text_size"
                    android:paddingHorizontal="20dp"
                    android:paddingBottom="20dp"
                    android:text="@string/record_delete_hint" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/detail_hint_label"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="?colorAccent"
                    app:autoSizeTextType="uniform"
                    android:textSize="@dimen/medium_text_size"
                    android:paddingHorizontal="20dp"
                    android:paddingBottom="20dp"
                    android:text="@string/record_detail_hint" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/doses_recycler"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    tools:listitem="@layout/item_dose_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </androidx.appcompat.widget.LinearLayoutCompat>
        </androidx.core.widget.NestedScrollView>


    </androidx.appcompat.widget.LinearLayoutCompat>
</layout>
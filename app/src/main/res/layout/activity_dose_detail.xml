<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="vm"
            type="dev.corruptedark.diditakemymeds.activities.dosedetails.DoseDetailViewModel" />

        <import type="android.view.View" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?ditmm_colorBackground"
        android:orientation="vertical"
        tools:context=".activities.dosedetails.DoseDetailActivity">

        <include
            android:id="@+id/appbar"
            layout="@layout/view_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginVertical="10dp"
                    android:orientation="horizontal">

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/dose_taken_time_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical|start"
                        android:layout_marginEnd="5dp"
                        android:textColor="?colorAccent"
                        android:textSize="@dimen/medium_text_size"
                        app:timeTaken="@{vm.doseRecord}"
                        tools:text="@string/midnight" />

                    <androidx.appcompat.widget.AppCompatImageButton
                        android:id="@+id/start_taken_time_edit_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical|end"
                        android:layout_marginStart="5dp"
                        android:background="#00000000"
                        android:onClick="@{() -> vm.onEditTakeTimeButtonTapped()}"
                        android:src="@drawable/edit" />
                </androidx.appcompat.widget.LinearLayoutCompat>

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:id="@+id/taken_time_edit_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginVertical="10dp"
                    android:orientation="horizontal"
                    android:visibility="@{vm.showEditTakenTime ? View.VISIBLE : View.GONE}"
                    tools:visibility="visible">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/taken_time_button"
                        style="@style/Widget.Button.Accented.Outlined"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="5dp"
                        android:onClick="@{() -> vm.onTimeTapped()}"
                        android:paddingVertical="15dp"
                        android:textSize="@dimen/medium_text_size"
                        app:timeFromMillis="@{vm.workingCalendar.timeInMillis}"
                        tools:text="@string/midnight" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/taken_date_button"
                        style="@style/Widget.Button.Accented.Outlined"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="5dp"
                        android:onClick="@{() -> vm.onDateTapped()}"
                        android:paddingHorizontal="10dp"
                        android:paddingVertical="15dp"
                        android:textSize="@dimen/medium_text_size"
                        app:dateFromMillis="@{vm.workingCalendar.timeInMillis}"
                        tools:text="@string/date_format" />

                    <androidx.appcompat.widget.AppCompatImageButton
                        android:id="@+id/taken_time_confirm_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical|end"
                        android:layout_marginHorizontal="5dp"
                        android:background="#00000000"
                        android:onClick="@{() -> vm.onApplyTimeChangesTapped()}"
                        android:src="@drawable/done" />

                    <androidx.appcompat.widget.AppCompatImageButton
                        android:id="@+id/taken_time_cancel_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical|end"
                        android:layout_marginStart="5dp"
                        android:background="#00000000"
                        android:onClick="@{() -> vm.onCancelTimeChangesTapped()}"
                        android:src="@drawable/close" />
                </androidx.appcompat.widget.LinearLayoutCompat>

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/closest_dose_time_label"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginVertical="10dp"
                    android:textColor="?colorAccentSecondary"
                    android:textSize="@dimen/medium_text_size"
                    android:visibility="@{vm.showClosestDose ? View.VISIBLE : View.GONE}"
                    app:closestDose="@{vm.doseRecord}"
                    tools:text="@string/midnight"
                    tools:visibility="visible" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/proof_image_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginVertical="20dp"
                    android:adjustViewBounds="true"
                    android:visibility="@{vm.hasImage ? View.VISIBLE : View.GONE}"
                    tools:src="@drawable/ic_launcher_circle_base"
                    tools:visibility="visible" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/no_image_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:padding="20dp"
                    android:text="@string/no_image_available"
                    android:textColor="?colorAccentSecondary"
                    android:textSize="@dimen/medium_text_size"
                    android:visibility="@{vm.hasImage ? View.GONE : View.VISIBLE}"
                    app:autoSizeTextType="uniform"
                    tools:visibility="visible" />
            </androidx.appcompat.widget.LinearLayoutCompat>
        </ScrollView>

    </LinearLayout>
</layout>
